		<uses-permission android:name="android.permission.CAMERA" />
		<uses-feature android:name="android.hardware.camera" />
		<uses-feature android:name="android.hardware.camera.autofocus" />
	</config-file-->
	
	<platform name="android">
		<icon density="ldpi" src="img/truck-load.png" />
        <icon density="mdpi" src="img/truck-load.png" />
        <icon density="hdpi" src="img/truck-load.png" />
        <icon density="xhdpi" src="img/truck-load.png" />
        <icon density="xxhdpi" src="img/truck-load.png" />
        <icon density="xxxhdpi" src="img/truck-load.png" />
	</platform>
	
	<platform name="ios">
		<icon src="img/truck-load.png" />
	</platform>
	
</widget>
